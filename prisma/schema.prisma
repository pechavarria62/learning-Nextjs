generator client {
  provider = "prisma-client-js"
  output   = "../prisma"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Customer {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  image_url String
  invoices  Invoice[]
}

model Invoice {
  id          Int      @id @default(autoincrement())
  customer_id Int
  amount      Int
  status      String
  date        DateTime

  customer Customer @relation(fields: [customer_id], references: [id])
}

model Revenue {
  month   String  @id
  revenue Int
}